<div class="container">
  <div class="row">
    <div class="col-sm-6 mt-4">
      <h1><%= @deck.name %></h1>

      <p>You have studied
        <strong><%= @current_card %></strong>
      out of <%= @count_cards %> cards in this deck</p>
      <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: <%= @percentage %>%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><%= @percentage.round %>%</div>
      </div>

      <div class="card mt-4">
        <div class="card-body" style="width: 500px; margin: 0 auto;">
          <h5 class="card-title"><%= @card.front %></h5>
          <textarea name="Text1" id='answer' cols="40" rows="5" style="width:450px;"></textarea>
          <br>
          <p class="card-text show mt-4" style="display:none"><strong>Answer:</strong> <%= @card.back %></p>
          <br>
          <button class="flip mt-3" type="submit">flip card</button>
        </div>
        <div class="user-actions">
          <% if @deck.user == current_user %>
        <%= link_to edit_deck_card_path(@deck, @card) do %>
          <i class="fas fa-edit fa"></i>
        <% end %>
        <%= link_to deck_card_path(@deck, @card), method: :delete, data: {confirm: 'Are you sure'} do %>
          <i class="fas fa-trash fa"></i>
        <% end %>
      <% end %>
        </div>
      </div>

      <div class="mt-4">
        <%= link_to 'I knew it!', deck_card_user_knows_path(deck: @deck, card_id: @card, wrong: params[:wrong]), class: 'btn btn-primary show', method: :post %>
        <%= link_to 'I didn\'t know!', deck_card_user_does_not_know_path(deck: @deck, card_id: @card, wrong: params[:wrong]), class: 'btn btn-danger show', method: :post %>
      </div>
    </div>
  </div>
</div>
