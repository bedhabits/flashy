<div class="container">
  <div class="row">

    <div class="col-sm-12 mt-5 deck-index">

      <h1>Look for the best flashy cards</h1>

      <%= render 'search' %>

      <div class="d-flex justify-content-around flex-wrap">
        <% @decks.each do |deck| %>
          <div class="card mb-4 deck-card">
            <%= link_to deck_path(deck), class: "deck-link bd-highlight" do %>
              <div class="card-body deck-body">

                <div class="deck-title bd-highlight">
                  <h3 class="card-title"><%= deck.name %></h3>
                </div>

              <!--   <div class="deck-play bd-highlight justify-content-between">
                  <p class="card-title">Play</p>
                </div> -->


                <div class="reviews d-flex justify-content-center" style="position: relative; right: 30px; top: 20px; margin-left: 60px;">
                  <div class="upvote deck-upvote">
                    <span ><i class="fas fa-sort-up"></i></span>
                    <p><%= deck.review_total %></p>
                  </div>

                  <div class="downvote deck-upvote">
                    <span ><i class="fas fa-sort-down"></i></span>
                    <p> <%= deck.downvotes %></p>
                  </div>
                </div>


              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


