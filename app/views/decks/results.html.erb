<div class="container content">
  <div class="row">
    <div class="col-12 mt-4">
      <h1>Results for <%= @deck.name %>:</h1>

      <ul>
        <li>
          Knew: <%= @results_positive %>
        </li>
        <li>
          Did not know: <%= @results_negative %>
        </li>
      </ul>
      <strong>
        Total: <%= @results_positive + @results_negative %>
      </strong>
      <% if @results_positive > @results_negative %>
        <p>Wooooooowwwww maaan, really impressive ðŸ˜²</p>
      <% else %>
        <p>Wow! I've never seen something like that...</p>
      <% end %>
      <% if @deck.wrong_answers.any? %>
        <%= link_to "Re-try wrong ones", deck_card_path(deck: @deck, id: @deck.wrong_answers.first.card_id, wrong: true), class: 'btn btn-primary btn-lg'  %>
      <% end %>
    </div>
  </div>
</div>
